{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "integer"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "flower": {
      "type": "enumeration",
      "enum": [
        "Indica",
        "Sativa",
        "Hybrid"
      ]
    },
    "sale": {
      "type": "boolean",
      "default": false
    },
    "originalPrice": {
      "type": "decimal"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    }
  }
}
